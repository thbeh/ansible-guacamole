# Hostname and port of Guacamole proxy
guacd-hostname: 127.0.0.1
guacd-port:     {{ GUACD_PORT }}

# MySQL Properties
mysql-hostname: 127.0.0.1
mysql-port: 3306
mysql-database: guac
mysql-username: guacuser
mysql-password: {{ database_passwd }}

# LDAP setting
ldap-hostname: ldaphost
ldap-port: 389
#ldap-encryption-method: none
ldap-user-base-dn: cn=users,cn=accounts,dc=example,dc=com
ldap-username-attribute: uid
ldap-user-filter: (memberOf=cn=exampleGroup,cn=groups,cn=accounts,dc=example,dc=com) 
